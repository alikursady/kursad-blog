@import "https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700&family=Rajdhani:wght@300;400;500;600;700&display=swap";:root{--theme:#0b0c15;--entry:#13141f;--primary:#e0e6ed;--secondary:#949aa3;--tertiary:#2d2f3d;--content:#cfd4db;--code-block-bg:#161723;--code-bg:#1c1d29;--border:#2d2f3d;--neon-pink:#ff0055;--neon-blue:#00f3ff;--neon-purple:#bc13fe;--glass-bg:rgba(19, 20, 31, 0.7);--glass-border:1px solid rgba(255, 255, 255, 0.1)}body{font-family:rajdhani,sans-serif;background-color:var(--theme);background-image:linear-gradient(rgba(11,12,21,.9),rgba(11,12,21,.95)),linear-gradient(0deg,transparent 24%,rgba(0,243,255,5%) 25%,rgba(0,243,255,5%) 26%,transparent 27%,transparent 74%,rgba(0,243,255,5%) 75%,rgba(0,243,255,5%) 76%,transparent 77%,transparent),linear-gradient(90deg,transparent 24%,rgba(188,19,254,5%) 25%,rgba(188,19,254,5%) 26%,transparent 27%,transparent 74%,rgba(188,19,254,5%) 75%,rgba(188,19,254,5%) 76%,transparent 77%,transparent);background-size:100% 100%,50px 50px,50px 50px;background-attachment:fixed;overflow-x:hidden}h1,h2,h3,h4,h5,h6{font-family:orbitron,sans-serif;color:var(--primary);letter-spacing:1px}a{color:var(--neon-blue);text-decoration:none;transition:all .3s ease;position:relative}a:hover{color:var(--neon-pink);text-shadow:0 0 8px var(--neon-pink)}.header{background:rgba(11,12,21,.8);backdrop-filter:blur(10px);border-bottom:1px solid var(--tertiary);box-shadow:0 4px 20px rgba(0,0,0,.5)}.logo a{font-family:orbitron,sans-serif;font-weight:700;font-size:24px;background:linear-gradient(to right,var(--neon-blue),var(--neon-purple));-webkit-background-clip:text;-webkit-text-fill-color:transparent;text-shadow:0 0 10px rgba(0,243,255,.3)}.menu a{font-family:rajdhani,sans-serif;font-weight:600;text-transform:uppercase;letter-spacing:1px}.menu a:hover{color:var(--neon-blue);border-bottom-color:var(--neon-blue)}.post-entry{background:var(--glass-bg);border:1px solid var(--tertiary);border-radius:12px;transition:all .3s ease;overflow:hidden;position:relative}.post-entry:before{content:'';position:absolute;top:0;left:0;width:4px;height:100%;background:linear-gradient(to bottom,var(--neon-blue),var(--neon-purple));opacity:.7;transition:opacity .3s}.post-entry:hover{transform:translateY(-5px)scale(1.01);box-shadow:0 10px 30px rgba(0,0,0,.5),0 0 15px rgba(0,243,255,.1);border-color:var(--neon-purple)}.entry-header h2{font-size:1.8rem;margin-bottom:10px}.entry-content{font-size:1.1rem;color:var(--secondary)}.intro-card{background:linear-gradient(145deg,rgba(19,20,31,.9),rgba(11,12,21,.95));border:1px solid var(--neon-purple);border-radius:16px;padding:40px;margin:60px auto;text-align:center;box-shadow:0 0 20px rgba(188,19,254,.15),inset 0 0 20px rgba(188,19,254,5%);position:relative;overflow:hidden}.intro-card::after{content:"SYSTEM_ONLINE";position:absolute;bottom:10px;right:15px;font-family:orbitron,sans-serif;font-size:.7rem;color:var(--neon-blue);opacity:.5;letter-spacing:2px}.intro-card h1{font-size:2.5rem;background:linear-gradient(to right,#fff,var(--primary));-webkit-background-clip:text;-webkit-text-fill-color:transparent;margin-bottom:15px}.intro-card .subtitle{font-size:1.2rem;color:var(--neon-blue);opacity:.9;margin-bottom:25px}.social-icons a{background:rgba(255,255,255,5%);border-radius:50%;padding:10px;width:50px;height:50px;display:inline-flex;align-items:center;justify-content:center;margin:0 5px;border:1px solid transparent;transition:all .3s}.social-icons a:hover{background:rgba(0,243,255,.1);border-color:var(--neon-blue);transform:scale(1.1)rotate(5deg);box-shadow:0 0 15px rgba(0,243,255,.4)}.social-icons a svg{fill:var(--primary);transition:fill .3s}.social-icons a:hover svg{fill:var(--neon-blue)}.footer{background:rgba(8,9,15,.95);border-top:1px solid var(--tertiary);padding:40px 0;text-align:center;backdrop-filter:blur(5px);margin-top:auto}.footer-content{display:flex;flex-direction:column;align-items:center;gap:10px}.copyright{font-family:rajdhani,sans-serif;font-size:1rem;color:var(--secondary);letter-spacing:1px}.copyright a{color:var(--neon-blue);font-weight:600}.tagline{font-family:orbitron,sans-serif;font-size:.8rem;color:var(--neon-purple);opacity:.8;letter-spacing:1.5px}.separator{margin:0 8px;color:var(--neon-pink)}::-webkit-scrollbar{width:10px;background:var(--theme)}::-webkit-scrollbar-thumb{background:var(--tertiary);border-radius:5px;border:2px solid var(--theme)}::-webkit-scrollbar-thumb:hover{background:var(--neon-purple)}::selection{background:var(--neon-pink);color:#fff}